build-type:          Simple
extra-source-files:  CHANGELOG.md

executable ImpLanguages
  main-is:             Main.hs
  other-modules:       IR.Syntax
                       IR.Frontend.Haskell
  hs-source-dirs:      src
  -- other-extensions:
  default-extensions:
    GADTs
    DataKinds
    StandaloneDeriving
    RecordWildCards
    TemplateHaskell
    ScopedTypeVariables
    DeriveFunctor
    PatternSynonyms
    LambdaCase
    Rank2Types
    TypeFamilies
    FlexibleContexts  
    FlexibleInstances  
    MultiParamTypeClasses  
    UnicodeSyntax
    TypeOperators
    GeneralizedNewtypeDeriving

  build-depends:        base >=4.13 && <4.14
                      , mtl
                      , containers
                      , lens
  default-language:    Haskell2010
